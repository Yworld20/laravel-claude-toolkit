#!/usr/bin/env bash
set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Helper functions
info() { echo -e "${BLUE}[INFO]${NC} $1"; }
success() { echo -e "${GREEN}[OK]${NC} $1"; }
warn() { echo -e "${YELLOW}[WARN]${NC} $1"; }
error() { echo -e "${RED}[ERROR]${NC} $1"; exit 1; }

# Command functions
cmd_start() {
    info "Starting development environment..."
    docker compose --profile dev up -d
    success "Development environment started at http://localhost:8080"
}

cmd_stop() {
    info "Stopping all services..."
    docker compose --profile dev down
    success "All services stopped"
}

cmd_build() {
    info "Building production Docker image..."
    docker compose build app
    success "Build complete"
}

cmd_shell() {
    info "Opening shell in app container..."
    docker compose exec app sh
}

cmd_test() {
    info "Running PHPUnit tests..."
    docker compose exec app php artisan test "$@"
}

cmd_artisan() {
    docker compose exec app php artisan "$@"
}

cmd_composer() {
    docker compose exec app composer "$@"
}

cmd_npm() {
    docker compose run --rm node npm "$@"
}

cmd_logs() {
    docker compose logs -f "$@"
}

cmd_fresh() {
    info "Resetting database..."
    docker compose exec app php artisan migrate:fresh --seed
    success "Database reset complete"
}

cmd_help() {
    echo -e "${GREEN}Laravel Claude Toolkit${NC} - Development Commands"
    echo ""
    echo "Usage: ./dev <command> [arguments]"
    echo ""
    echo "Available commands:"
    echo -e "  ${YELLOW}start${NC}        Start development environment"
    echo -e "  ${YELLOW}stop${NC}         Stop all services"
    echo -e "  ${YELLOW}build${NC}        Build production Docker image"
    echo -e "  ${YELLOW}shell${NC}        Open shell in app container"
    echo -e "  ${YELLOW}test${NC}         Run PHPUnit tests"
    echo -e "  ${YELLOW}artisan${NC}      Run Laravel artisan commands"
    echo -e "  ${YELLOW}composer${NC}     Run composer commands"
    echo -e "  ${YELLOW}npm${NC}          Run npm commands"
    echo -e "  ${YELLOW}logs${NC}         Follow container logs"
    echo -e "  ${YELLOW}fresh${NC}        Reset database and reseed"
    echo -e "  ${YELLOW}help${NC}         Show this help message"
    echo ""
    echo "Examples:"
    echo "  ./dev start"
    echo "  ./dev artisan make:model User"
    echo "  ./dev composer require laravel/sanctum"
    echo "  ./dev npm install"
}

# Main dispatcher
case "${1:-help}" in
    start)    cmd_start ;;
    stop)     cmd_stop ;;
    build)    cmd_build ;;
    shell)    cmd_shell ;;
    test)     shift; cmd_test "$@" ;;
    artisan)  shift; cmd_artisan "$@" ;;
    composer) shift; cmd_composer "$@" ;;
    npm)      shift; cmd_npm "$@" ;;
    logs)     shift; cmd_logs "$@" ;;
    fresh)    cmd_fresh ;;
    help)     cmd_help ;;
    *)        warn "Unknown command: $1"; cmd_help; exit 1 ;;
esac
